<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
<div>
    <ol>
        <% postList.results.forEach(function(post) {%>
            <li>
                <ul>
                    <li> 
                        <h2><%= post.message %></h2> 
                        <p>post by: <strong><%= post.postedBy.username %></strong> on <small> <%= format(post.createdAt, "yyyy-MM-dd HH:mm:ss") %></small></p>
                    </li>                        
                    <li>
                        <img src = <%= post.imageUrl %> alt = "Post image">
                    </li>
                    <li>
                        <h3> liked by:</h3>
                        <p>
                            <%= post.likedBy.map(user => user.username).concat(", ")%>
                        </p>
                    </li>
                    <!-- <li>
                        <h3> liked by:</h3>
                        <% post.likedBy.forEach(function(user) {%>
                            <ul>
                                <li>
                                    <%= user.username %>
                                </li>
                            </ul>
                        <% }); %>
                    </li> -->
                    <li>
                        <h3> disliked by:</h3>
                        <% post.dislikedBy.forEach(function(user) {%>
                            <ul>
                                <li>
                                    <%= user.username %>
                                </li>
                            </ul>

                        <% }); %>
                    </li>                    
                    <li>
                        <%= post.userId %>
                    </li>
                </ul>
            </li>
        <% }); %>
    </ol>
</div>
</body>
<%- include('_footer') -%>
</html>